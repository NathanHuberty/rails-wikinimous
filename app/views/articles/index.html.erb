<h1>Liste des articles</h1>

<%= link_to "Nouvel article", new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <li><h3><%= article.title %></h3></li>
    <br>
    <p><%= article.content %></p>
    <%= link_to "Plus d'informations", article_path(article.id) %>
    <%= link_to "Modifier", edit_article_path(article.id) %>
    <%= link_to "Supprimer", article_path(article.id), method: :delete, data: { confirm: "Do you really want to delete this article?" } %>
    <br>
  <% end %>
</ul>

